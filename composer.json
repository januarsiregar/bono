{
    "name": "xinix-technology/bono",
    "type": "library",
    "scripts": {
      "lint": "phpcs ./src/",
      "test": "phpunit test",
      "cover": [
        "rm -rf ./coverage",
        "phpunit --whitelist=./src/ --coverage-html=./coverage test"
      ]
    },
    "require": {
        "php": "^5.4 | ^7.0",
        "psr/http-message": "^1.0",
        "nikic/fast-route": "^0.6.0",
        "filp/whoops": "^2.0",
        "reekoheek/util": "~1.2.0",
        "monolog/monolog": "~1.19.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Bono\\": "src/Bono"
        }
    }
}
