{
  "name": "xinix-technology/bono",
  "description": "Bono PHP web framework",
  "type": "library",
  "scripts": {
    "lint": "phpcs .",
    "test": "phpunit test",
    "coverage": [
      "rm -rf ./coverage",
      "phpunit --whitelist=./src/ --coverage-html=./coverage test"
    ]
  },
  "require": {
    "php": "^5.4 | ^7.0",
    "psr/http-message": "^1.0",
    "nikic/fast-route": "^0.6.0",
    "filp/whoops": "^2.0",
    "reekoheek/util": "~1.2.0",
    "monolog/monolog": "~1.19.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.2",
    "squizlabs/php_codesniffer": "^3.3",
    "brainmaestro/composer-git-hooks": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "Bono\\": "src/Bono"
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": "composer lint && composer test"
    }
  }
}
